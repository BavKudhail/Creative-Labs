  </div>

  <div class="col s12 m12 l10">

 <div class="custom-profile-projects">
      <h3>Projects created</h3>
       {{#if user.projects.length}}
      <ul class="collapsible">  
        {{#each user.projects}}
          <li>
            <div class="collapsible-header"><i
                class="material-icons"
              >whatshot</i>{{title}}</div>
            <div class="collapsible-body"><span>{{description}}</span></div>
          </li>
        {{/each}}
      </ul>
         {{else}}
         <h3 class="custom-noproject">No projects</h3>
        {{/if}}
     
        <h3>Teams joined</h3>
        {{#if user.teams.length}}
        <ul class="collapsible">
          {{#each user.teams}}
            <li>
              <div class="collapsible-header"><i
                  class="material-icons"
                >whatshot</i>{{team_name}}</div>
              <div class="collapsible-body"><span
                >{{users.username}}</span></div>
            </li>
          {{/each}}
          {{! TEST }}
        </ul>
          {{else}}
         <h3 class="custom-noproject">No teams</h3>
        {{/if}}
     
    </div>

