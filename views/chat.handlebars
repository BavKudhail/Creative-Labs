{{! chat }}

<div class="row">
  <div>
    <img class="chat-image" src="/images/Marni 4.png" alt="" />
  </div>
  <div>
    <img class="chat-image" src="/images/Badrun 4.png" alt="" />
  </div>
  <div class="custom-bg container row">

    <div>
      {{! main section }}
      <main>
        <header class="chat-header">
          <div>
            <h2 id="team-name">{{project.title}}</h2>
            <h3>Group chat</h3>
            <h2>Online Users
              <ul id="user-list" class="green-text">
              </ul>
            </h2>
          </div>
        </header>

        <div class="messages white-text"></div>
      </main>

      {{! form container }}
      <div class="form-container">
        <form id="chat-form">
          <input id="message" type="text" placeholder="Enter your message" />
          <button class="btn send-btn"><i
              class="material-icons"
            >send</i></button>
        </form>
      </div>

    </div>
  </div>

  {{! leave chat button - take user back to dashboard }}
  <div class="center-align">
    <a href="/dashboard">
      <button class="btn" id="leave-btn">Leave Chat</button>
    </a>
  </div>

</div>

