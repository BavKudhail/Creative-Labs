{{! join the team }}
<div class="row center-align custom-chat-intro">

  <h4>Hey
    <span id="my-role">{{user.role}}</span>
    <span id="username">{{user.username}}</span>!</h4>
  <h4>Welcome to project
    <span id="project-id">{{project.id}}</span>:
    {{project.title}}
    project ðŸ”¥</h4>
  <h4>{{project.user.username}}
    is searching for
    <span id="designers_needed">{{project.designers_needed}}</span>
    designers,
    <span id="developers_needed">{{project.developers_needed}}</span>
    developers and
    <span id="artist_needed">{{project.artist_needed}}</span>
    artists</h4>
  <h4> Would you like to join their team? </h4>

  <div>
    <button class="btn center-align custom-join-btn" id="join-btn">JOIN TEAM!</button>
  </div>

</div>

{{! members of the team }}

<div class="row container center-align">
  {{! card }}
  {{#each team.users}}
    <div class="col s4 m3 l2">
      <div class="card">
        <div class="card-image">
          <img src="{{picture_url}}" />
        </div>
        <div class="card-content black-text custom-card-content">
          <p>
            <a
              href="/profile/{{id}}"
              class="custom-member-name"
            >{{username}}</a></p>
          <p>{{role}}</p>
          <p>{{email}}</p>
          <p class="custom-member">Member of the team</p>
        </div>
      </div>
    </div>
  {{/each}}
</div>

